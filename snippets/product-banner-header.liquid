{% comment %}
    Renders product media

    Accepts:
    - block: {Object} Block

    Usage:
    {% render 'product-banner-header',
      block: block
    %}
{% endcomment %}

<div class="product-banner__header-mobile medium-hide large-up-hide">
  <details class="product-banner__header-drawer-container">
    <summary class="product-banner__header-icon">
      <span>
        {% render 'icon' with 'hamburger' %}
        {% render 'icon' with 'close' %}
      </span>
    </summary>
    <div class="product-banner__header-drawer">
      {% if block.settings.announcement_text != blank %}
        <p class="product-banner__header-announcement-">{{ block.settings.announcement_text }}</p>
      {% endif %}
      {% if block.settings.button_text != blank %}
        <a 
          href="{{ block.settings.button_url }}"
          class="button-assessment secondary-button product-banner__header-button"
        >
          {{ block.settings.button_text }}
          {% render 'icon' with 'arrow-right' %}
          <span class="animation-bg"></span>
        </a>
      {% endif %}
    </div>
  </details>
  {% if block.settings.shop_title != blank %}
    <h1 class="product-banner__header-title">{{ block.settings.shop_title }}</h1>
  {% endif %}
</div>
<div class="product-banner__header-desktop small-hide">
  {% if block.settings.shop_title != blank %}
    <h1 class="product-banner__header-title">{{ block.settings.shop_title }}</h1>
  {% endif %}
  {% if block.settings.announcement_text != blank %}
    <p class="product-banner__header-announcement-">{{ block.settings.announcement_text }}</p>
  {% endif %}
  {% if block.settings.button_text != blank %}
    <a 
      href="{{ block.settings.button_url }}"
      class="button-assessment secondary-button product-banner__header-button"
    >
      {{ block.settings.button_text }}
      {% render 'icon' with 'arrow-right' %}
      <span class="animation-bg"></span>
    </a>
  {% endif %}
</div>